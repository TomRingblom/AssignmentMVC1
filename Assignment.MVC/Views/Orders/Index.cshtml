@model OrderHistoryVM



<div class="text-center">
    <h1 class="display-4">Orderhistorik</h1>
    @if(Model.OrderItems.Count() == 0){<span>Du har aldrig beställt något hos oss</span>}
    @foreach (var order in Model.OrderItems)
    {
        <ul class="list-group mt-3">
            <li class="list-group-item"><b>Ordernummer:</b> @order.OrderId</li>
            @foreach (var item in @order.Items)
            {
                <li class="list-group-item"><b>Artikelnummer:</b> @item.Id</li>
                <li class="list-group-item"><b>Produktnamn:</b> @item.Name</li>
                <li class="list-group-item"><b>Antal:</b> @item.Quantity * @item.Price kr/st</li>                                                                          
            }
            <li class="list-group-item"><b>Orderdatum:</b> @order.OrderDate</li>
            <li class="list-group-item align-content-end"><b>Totalsumma:</b> <b>@order.TotalPrice</b> kr</li>
        </ul>
    }
</div>
